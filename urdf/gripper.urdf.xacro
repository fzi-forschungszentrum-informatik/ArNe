<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="gripper">

<xacro:macro name="gripper" params="parent">

        <xacro:property name="finger_radius" value="0.01" />
        <xacro:property name="finger_length" value="0.1" />

        <link name="gripper">
                <visual name="visual">
                        <geometry>
                                <cylinder length="0.1" radius="0.02"/>
                        </geometry>
                </visual>
                <visual name="visual">
                        <origin xyz="0 0 ${-0.05 + 0.01}" rpy="0 0 0" />
                        <geometry>
                                <box size="0.02 0.15 0.02"/>
                        </geometry>
                </visual>
                <visual name="visual">
                        <origin xyz="0 0.075 ${-0.05 -0.05}" rpy="0 0 0" />
                        <geometry>
                                <box size="0.02 0.02 0.1"/>
                        </geometry>
                </visual>
                <visual name="visual">
                        <origin xyz="0 -0.075 ${-0.05 -0.05}" rpy="0 0 0" />
                        <geometry>
                                <box size="0.02 0.02 0.1"/>
                        </geometry>
                </visual>
        </link>
        <joint name="pose" type="floating">
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <parent link="${parent}"/>
                <child link="gripper"/>
        </joint>
</xacro:macro>
</robot>
